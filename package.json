{
  "name": "awesome-templates-bridge",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/PabloSzx/awesome-templates",
  "license": "MIT",
  "author": "PabloSz <pablosaez1995@gmail.com>",
  "main": "dev.ts",
  "workspaces": [
    "api",
    "client"
  ],
  "scripts": {
    "build": "concurrently \"tsc -P api\" \"yarn --cwd client build\"",
    "build-api": "tsc -P api",
    "dev": "concurrently \"ts-node dev.ts\" \"yarn --cwd api dev\" \"yarn --cwd client dev\"",
    "postinstall": "lerna bootstrap",
    "start": "pm2 start ecosystem.yaml",
    "stop": "pm2 delete ecosystem.yaml"
  },
  "dependencies": {
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.20.0",
    "node-notifier": "^6.0.0",
    "open": "^7.0.2",
    "ts-node": "^8.6.2",
    "typescript": "3.7.5",
    "vhost-ts": "^4.0.0",
    "wait-port": "^0.2.7"
  },
  "devDependencies": {
    "@types/concurrently": "^5.1.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-serve-static-core": "^4.17.2",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/node": "^13.7.0",
    "@types/node-notifier": "^5.4.0",
    "lerna": "^3.20.2"
  }
}
